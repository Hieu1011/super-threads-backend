{
  "name": "super-threads-backend",
  "version": "2.0.0",
  "description": "Full backend API with authentication and real-time chat for Super Threads",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:view": "node scripts/db-viewer.js",
    "db:users": "node scripts/db-viewer.js users",
    "db:messages": "node scripts/db-viewer.js messages",
    "db:conversations": "node scripts/db-viewer.js conversations",
    "db:schema": "sqlite3 database.sqlite '.schema'",
    "db:reset": "rm -f database.sqlite"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "websocket",
    "chat",
    "react-native",
    "super-threads"
  ],
  "author": "",
  "license": "MIT"
}
